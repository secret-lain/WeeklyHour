<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_information_item"
    android:paddingBottom="@dimen/info_activity_vertical_padding"
    android:paddingLeft="@dimen/info_activity_horizontal_padding"
    android:paddingRight="@dimen/info_activity_horizontal_padding"
    android:paddingTop="@dimen/info_activity_vertical_padding"
    tools:context="org.weeklyhour.ItemInformationAcitvity.itemInformationActivity"
    android:orientation="vertical"
    android:layout_height="500dp"
    android:layout_width="350dp"
    android:paddingEnd="@dimen/info_activity_vertical_padding"
    android:paddingStart="@dimen/info_activity_vertical_padding">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="4"
        android:layout_gravity="center"
        android:foregroundGravity="center">

        <TextView
            android:text="taskName : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textSize="@dimen/info_text_size" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText4"
            android:textSize="@dimen/info_text_size" />

        <TextView
            android:text="        hour : "
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="@dimen/info_text_size"
            android:textAlignment="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText5"
            android:textSize="@dimen/info_text_size" />
    </GridLayout>
</LinearLayout>
