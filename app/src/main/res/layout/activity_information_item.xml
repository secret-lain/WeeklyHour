<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_information_item"
    android:paddingBottom="@dimen/info_activity_vertical_padding"
    android:paddingLeft="@dimen/info_activity_horizontal_padding"
    android:paddingRight="@dimen/info_activity_horizontal_padding"
    android:paddingTop="@dimen/info_activity_vertical_padding"
    tools:context="org.weeklyhour.ItemInformationAcitvity.itemInformationActivity"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="350dp"
    android:paddingEnd="@dimen/info_activity_vertical_padding"
    android:paddingStart="@dimen/info_activity_vertical_padding">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="taskName : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textSize="@dimen/info_text_size"
                android:textAlignment="textEnd" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/taskNameEditText_info"
                android:textSize="@dimen/info_text_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="hour : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_row="1"
                android:layout_column="0"
                android:textSize="@dimen/info_text_size"
                android:textAlignment="textEnd" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/hourEditText_info"
                android:textSize="@dimen/info_text_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="memo : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:layout_row="1"
                android:layout_column="0"
                android:textSize="@dimen/info_text_size"
                android:textAlignment="textEnd" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/memoEditText_info"
                android:textSize="@dimen/info_text_size" />
        </TableRow>

    </TableLayout>

</LinearLayout>
