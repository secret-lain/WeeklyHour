<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.weeklyhour.MainActivity">

    <!--
     Application Custom Class를 사용할 경우 붙인다.
    android:name="org.weeklyhour.ApplicationForCustomFont"
    -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:textAllCaps="false"
        android:theme="@style/AppTheme"
        tools:replace="android:icon,android:theme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.weeklyhour.InsertItemActivity.newItemActivity"
            android:label="@string/new_item_activity" />

        <activity
            android:name="org.weeklyhour.ItemInformationAcitvity.itemInformationActivity"
            android:label="@string/item_information_activity"
            android:theme="@style/Theme.AppCompat.Light.Dialog"
            ></activity>
    </application>

</manifest>